<launch>
  <!-- common parameters -->
  <!-- <arg name="delay_compensator_mode" default="mpc_follower" description="options: ..., ..."/> -->
  <arg name="communication_delay_compensator_path"
       default="$(find-pkg-share observers_compensators_launch)/config/communication_delay_compensator/communication_delay_compensator.param.yaml"/>

  <!-- control module -->
  <group>
    <push-ros-namespace namespace="control"/>

    <!-- Observers and Compensators -->
    <group>
      <push-ros-namespace namespace="observer"/>

      <!-- lateral controller -->
      <!-- <group if="$(eval &quot;'$(var lateral_controller_mode)'=='mpc_follower'&quot;)"> -->
      <include
        file="$(find-pkg-share communication_delay_compensator)/launch/communication_delay_compensator.launch.xml">
        <arg name="communication_delay_compensator_path" value="$(var communication_delay_compensator_path)"/>
      </include>

    </group>


  </group>
</launch>
